.loginPage
  position relative
  height 100vh
  overflow hidden
  .granimCanvas
    width 100%
    height 100%
  .antLayout
    position absolute
    background unset
    top 0
    left 0
    width 100vw
    height 100vh
    .header
      background unset
      text-align center
      color #fff
      height: 64px
      paddingInline: 50px
      lineHeight: 64px
    .antContent
      text-align center
      min-height 300px
      lineHeight: 120px
      display flex 
      justify-content center
      align-items center
    .antFooter
      text-align right
      color #fff
      background unset
 